
<div class="container mb-3 mt-3">
  <h2 class="title m-0 mb-5 text-white bg-secondary px-3 py-2" text-center><%= folder.name %></h2>

  <h5>Files: </h5>
  <hr>

   <div class="files-container grid">

    <% if (folder.folders.length > 0 || folder.files.length > 0){ %>
      <% folder.folders.forEach(flder => { %>
        <a href="/folders/<%=flder.id%>" class="d-flex flex-column justify-content-center align-items-center">

          <img src="/folder.svg" class="file-img img-fluid">
          <p><%= flder.name %></p>

        </a>
      <%})%>
    <%} else { %>
      <p>There is no content in this course yet..</p>
    <% } %>

  </div>
</div>